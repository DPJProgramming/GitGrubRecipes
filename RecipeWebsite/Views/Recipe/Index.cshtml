@model IEnumerable<RecipeWebsite.Models.Recipe>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Welcome To GitGrub</h1>

@if (!User.Identity.IsAuthenticated)
{
    <h4 class="text-center">Sign in to Create Your Own Recipes and Add to Your Favorites List!</h4>
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <a asp-action="Details" asp-route-id="@item.RecipeId" style="text-decoration: none; color: inherit;">
                    <div class="card mx-auto hover-card" style="width: 20rem;">
                        <img src="@item.ImageUrl" class="card-img-top" alt="Recipe Image">
                        <div class="card-body">
                            <h4 class="card-text">@Html.DisplayFor(modelItem => item.Title)</h4>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>